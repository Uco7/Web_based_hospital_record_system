    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5 login form" style="width: 60vw; margin-left: -5rem;" >
                    <div class="card-header">
                        <h3 class="text-center">Login Form</h3>
                    </div>
                    <div class="card-body">
                      <form id="testResultForm">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="fName">Full Name</label>
                              <input type="text" name="fName" id="fName" class="form-control" placeholder="Full Name" value="<%= cardData.patient.fName %>" required>
                            </div>
                            <div class="form-group">
                              <label for="phone_no">Phone Number</label>
                              <input type="text" name="phone_no" id="phone_no" class="form-control" placeholder="Phone Number" value="<%= cardData.patient.phone_no %>" required>
                            </div>
                            <div class="form-group">
                              <label for="phone_no">Patient Email</label>
                              <input type="email" name="patient_email" id="patient_email" class="form-control" placeholder="patient email" value="<%= cardData.patient.email %>" required>
                            </div>
                            <div class="form-group">
                              <label for="address">Address</label>
                              <input type="text" name="address" id="address" class="form-control" placeholder="Address" value="<%= cardData.patient.address %>" required>
                            </div>
                            <div class="form-group">
                              <label for="docRemark">Doctor's Remark</label>
                              <input type="text" name="docRemark" id="docRemark" class="form-control" placeholder="Doctor's Remark">
                            </div>
                            <div class="form-group">
                              <label for="genotype">Genotype</label>
                              <select name="blood_group" id="blood_group" class="form-control" required>
                                <option value="" disabled selected>Select Blood Group</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                              </select>                                </div>
                            <div class="form-group">
                              <label for="blood_group">Blood Group</label>
                              <select name="genotype" id="genotype" class="form-control" required>
                                <option value="" disabled selected>Select Genotype</option>
                                <option value="AA">AA</option>
                                <option value="AS">AS</option>
                                <option value="SS">SS</option>
                                <option value="AC">AC</option>
                                <option value="SC">SC</option>
                              </select>                                </div>
                              <div class="form-group">
                                <label for="illness">Illness</label>
                                <input type="text" name="illness" id="illness" class="form-control" placeholder="Illness">
                              </div>
                              <div class="form-group">
                                <label for="doc_name">Assign Doctor</label>
                                <input type="text" name="doc_name" id="doc_name" class="form-control" placeholder="Assigned Doctor">
                              </div>
                             
                              <!-- <div class="form-group">
                                <label for="illness">Illness</label>
                                <input type="text" name="illness" id="illness" class="form-control" placeholder="Illness">
                              </div> -->
                            </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="illness">Doctor Email</label>
                              <input type="text" name="doc_email" id="doc_email" class="form-control" placeholder="Doctor Email">
                            </div>
                            <div class="form-group">
                              <label for="pulseRate">Pulse Rate (0-100)</label>
                              <input type="number" name="pulseRate" id="pulseRate" class="form-control" placeholder="Pulse Rate" min="0" max="100" required>
                            </div>
                            <div class="form-group">
                              <label for="bloodPressure">Blood Pressure (e.g., 120-80)</label>
                              <select name="bloodPressure" id="bloodPressure" class="form-control" required>
                                <option value="">Select Blood Pressure</option>
                                <option value="Normal">Normal</option>
                                <option value="Elevated">Elevated</option>
                                <option value="High">High</option>
                                <option value="Very High">Very High</option>
                            </select>                                </div>
                            <div class="form-group">
                              <label for="hivStatus">HIV Status</label>
                              <select name="hivStatus" id="hivStatus" class="form-control" required>
                                <option value="">Select HIV Status</option>
                                <option value="Positive">Positive</option>
                                <option value="Negative">Negative</option>
                            </select>
                            </div>
                            <div class="form-group">
                              <label for="aidsStatus">AIDS Status</label>
                              <select name="aidsStatus" id="aidsStatus" class="form-control" required>
                                <option value="">Select AIDS Status</option>
                                <option value="Positive">Positive</option>
                                <option value="Negative">Negative</option>
                            </select>
                            </div>
                            <div class="form-group">
                              <label for="sugarLevel">Sugar Level (0-200)</label>
                              <input type="number" name="sugarLevel" id="sugarLevel" class="form-control" placeholder="Sugar Level" min="0" max="200" required>
                            </div>
                            <div class="form-group">
                              <label for="feverStatus">Fever Status</label>
                              <select name="feverStatus" id="feverStatus" class="form-control" required>
                                <option value="++">++</option>
                                <option value="+">+</option>
                                <option value="normal">Normal</option>
                                <option value="-">-</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="pregnancyStatus">Pregnancy Status</label>
                              <select name="pregnancyStatus" id="pregnancyStatus" class="form-control" >
                                <option value="">Select Pregnancy Status</option>
                                <option value="Positive">Positive</option>
                                <option value="Negative">Negative</option>
                            </select>
                            </div>
                            <div class="form-group">
                              <label for="malariaStatus">Malaria Status</label>
                              <select name="malariaStatus" id="malariaStatus" class="form-control" required>
                                <option value="">Select Malaria Status</option>
                                <option value="High">High</option>
                                <option value="Normal">Normal</option>
                                <option value="Accurate">Accurate</option>
                                <option value="Negative">Negative</option>
                            </select>
                            </div>
                          </div>
                        </div>
                        <div class="btn-cont text-center">
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
