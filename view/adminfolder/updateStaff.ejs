    <div class="container wrapp" id="complaintSection" >
     <h2 class="" id="bio">Staff Profile</h2>
     <form class="row g-3" enctype="multipart/form-data" id="staffForm">
        <div class="container text-center">
            <img src="data:image/jpeg;base64,<%= staff.profileImage %>" alt="Profile Image" style="width: 200px; height: 200px; border-radius: 10px;">
        </div>
        <div class="col-md-6">
            <label for="fName" class="form-label">First Name</label>
            <input type="text" name="fName" class="form-control" value="<%= staff.fName || 'No data' %>" >
            <input type="hidden" class="form-control" name="staffId" value="<%= staff._id || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="lName" class="form-label">Last Name</label>
            <input type="text" name="lName" class="form-control" value="<%= staff.lName || 'No data' %>" >
        </div>
     
        <div class="col-md-6">
            <label for="department" class="form-label">Gender</label>
            <input type="text" name="gender" class="form-control" value="<%= staff.gender || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" value="<%= staff.email || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="phone_no" class="form-label">Phone Number</label>
            <input type="number" name="phone_no" class="form-control" value="<%= staff.phone_no || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="address" class="form-label">Residential Address</label>
            <input type="text" name="address" class="form-control" value="<%= staff.address || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="state" class="form-label">State of Origin</label>
            <input type="text" name="state" class="form-control" value="<%= staff.state || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="lga" class="form-label">LGA</label>
            <input type="text" name="lga" class="form-control" value="<%= staff.LGA || 'No data' %>" >
        </div>
        <div class="col-md-6">
            <label for="matric" class="form-label">date Of Birth</label>
            <input type="text" name="date_of_birth" class="form-control" value="<%= staff.date_of_birth ? new Date(staff.date_of_birth).toLocaleDateString() : 'No data' %>" >
        </div>
        <div class="col-12">
            <button id="btn" class="btn btn-success staffBtn" type="button">Update</button>
        </div>
    </form>
