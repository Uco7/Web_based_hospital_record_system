
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Purchased Medicle Card page</title>
     
      
          <link rel="stylesheet" href="/css/staff.css">
    <link rel="stylesheet" href="./node_modules/bootstrap/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/56adb67a5b.js" crossorigin="anonymous"></script>
    
          <script src="https://kit.fontawesome.com/56adb67a5b.js" crossorigin="anonymous"></script>
          <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
          <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
          
          
          </head>
          
          <body>
       
              
    
            <%- include('./adminInclude_folder/navBar') %> <!-- Admin NavBar -->
            <%- include('./adminInclude_folder/sideBar') %> <!-- Admin Sidebar -->
          
   
            <%- include('./adminInclude_folder/appointent') %>

     
        <div class="container wrap-table card-tb ">
          <div class="resolve-complaint">
            <span  class="h4">
              Patient Purchased Cards Records
            </span>
            <input type="text" id="customSearchBox" class="form-control custom-search-input" placeholder="Search..." style="width: 40vw;">
        </div>
           
          <table  >
            <thead>
              <tr>
                <th>S/N</th>
                <th>Candidate Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Paid Amount</th>
                <th>Card Number</th>
                <th>Purchased Date</th>
                <th>Expiration Date</th>
                <th>Take Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (patientCard && patientCard.length > 0) { %>
                <% patientCard.forEach((card, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= card.fName %></td>
                    <td><%= card.email %></td>
                    <td><%= card.phone_no %></td>
                    <td><%= card.amount %></td>
                    <td><%= card.card_number %></td>
                    <td><%= new Date(card.purchase_date).toLocaleDateString() %></td>
                    <td><%= new Date(card.expiration_date).toLocaleDateString() %></td>
                    <td><a href="#">Fill Card</a></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="9" class="text-center">No records found</td>
                </tr>
              <% } %>
            </tbody>
            </table>

          </div>
    </div>
    </div>
   
    <!-- jQuery library -->
    <script src="/jquery/jquery.min.js"></script>
    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
  
    <script src="/js/userDashBord.js"></script>
    <script src="/js/labTech.js"></script>
    <script src="./node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script>
        function openNav() {
          document.getElementById("mySidenav").style.width = "100%";
          document.getElementById("mySidenav").style.height = "40%";
          document.getElementById("main").classList.add("open"); // Add class to push down
        }
        
        function closeNav() {
          document.getElementById("mySidenav").style.width = "0";
          document.getElementById("main").classList.remove("open"); // Remove class to return to original position
        }
        </script> 
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="/js/admin.js"></script>
<script src="/js/deleteRecord.js"></script>


</body>
</html>

